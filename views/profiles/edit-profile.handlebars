<div class="row">
  <div class="col-xs-12">
    <h2>Edit Profile</h2>
    <form class="form-horizontal" action="/profiles/edit" method="post">
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="email" >Email</label>
            <div>
              <input type="email" name="email" class="form-control" id="email" value="{{data.email}}">
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="username" >Username</label>
            <div>
              <input type="text" name="username" class="form-control" id="username" value="{{data.username}}">
            </div> 
          </div> 
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="age" >Age</label>
            <div>
              <input type="text" name="age" class="form-control" id="age" value="{{profile.age}}">
            </div> 
          </div> 
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="height" >Height</label>
            <div>
              <input type="text" name="height" class="form-control" id="height" value="{{profile.height}}">
            </div> 
          </div> 
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="gender" >Gender</label>
            <div>
              <input type="text" name="gender" class="form-control" id="gender" value="{{profile.gender}}">
            </div> 
          </div> 
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="hasKids" >Do you Have Kids?</label>
            <div class="radio">
              <label>
                <input type="radio" name="hasKids" id="hasKids1" value="true">
                  Yes
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="hasKids" id="hasKids2" value="false" checked>
                  No
              </label>
            </div>
          </div> 
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="isSingle" >Are you single?</label>
            <div class="radio">
              <label>
                <input type="radio" name="isSingle" id="isSingle1" value="true" checked>
                  Yes
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="isSingle" id="isSingle2" value="false">
                  No
              </label>
            </div>
          </div> 
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="aboutMe" >About Me</label>
            <div>
              <textarea id="aboutMe" name="aboutMe" class="form-control" rows="3">{{profile.aboutMe}}</textarea>
            </div> 
          </div> 
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="Talents" >Talents (separated by a space)</label>
            <div>
              <textarea id="Talents" name="Talents" class="form-control" rows="3">{{#each profile.Talents as |talent|}}{{talent.dataValues.talentName}}&nbsp;{{/each}}</textarea>
            </div> 
          </div> 
        </div> 
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="Favorites" >Favorites (separated by a space)</label>
            <div>
              <textarea id="Favorites" name="Favorites" class="form-control" rows="3">{{#each profile.Favorites as |favorite|}}{{favorite.dataValues.favoriteThing}}&nbsp;{{/each}}</textarea>
            </div> 
          </div> 
        </div> 
      </div>
      <div class="form-group">
        <div>
          <button type="submit" class="btn btn-default">Update Profile</button>
        </div>
      </div>
    </form>
  </div>
</div>