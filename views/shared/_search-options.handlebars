<div class="row">
  <div class="col-md-12">
    
    <h4>Search Options</h4>
    
    <ul class="nav nav-tabs">
      <li class="active"><a href="#sort-tab" data-toggle="tab">Sort <i class="fa"></i></a></li>
      <li><a href="#life-tab" data-toggle="tab">Life Filters <i class="fa"></i></a></li>
      <li><a href="#physical-tab" data-toggle="tab">Physical Filters <i class="fa"></i></a></li>
    </ul>
    
    <form id="accountForm" method="get" action="/profiles/index" class="form-horizontal">
      <div class="tab-content">
        <div class="tab-pane active" id="sort-tab">
          <div class="form-group">
            <label class="col-xs-3 control-label">Sort By</label>
            <div class="col-xs-9">
              <select class="form-control" name="sortBy">
                <option value="age|asc">Age (Youngest to Oldest)</option>
                <option value="age|desc">Age (Oldest to Youngest)</option>
                <option value="height|asc">Height (Shortest to Tallest)</option>
                <option value="height|desc">Height (Shortest to Tallest)</option>
              </select>
            </div>
          </div>
        </div>
      
    
        <div class="tab-pane" id="life-tab">
          <div class="form-group">
            <label class="col-xs-3 control-label">Is Single</label>
            <div class="col-xs-5">
              <div class="radio">
                <label>
                  <input type="radio" name="isSingle" id="isSingleTrue" value="yes" checked>
                  Yes
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="isSingle" id="isSingleFalse" value="no">
                  No
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="isSingle" id="isSingleBoth" value="both">
                  Doesn't Matter
                </label>
              </div>
            </div>
          </div>
        
          <div class="form-group">
            <label class="col-xs-3 control-label">Has Kids</label>
            <div class="col-xs-5">
              <div class="radio">
                <label>
                  <input type="radio" name="hasKids" id="hasKidsTrue" value="yes" >
                  True
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="hasKids" id="hasKidsFalse" value="no" checked>
                  False
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="hasKids" id="hasKidsBoth" value="both">
                  Doesn't Matter
                </label>
              </div>
            </div>
          </div>
    
          <div class="form-group">
            <label class="col-xs-3 control-label">Location</label>
            <div class="col-xs-5">
              <select class="form-control" name="location">
                {{#each locations as |location|}}
                  <option value="{{location}}">{{location}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        

        
          <div class="tab-pane" id="physical-tab">
            <div class="form-group">
              <label class="col-xs-3 control-label">Gender</label>
              <div class="col-xs-5">
                <input type="radio" name="gender" id="genderMale" value="[male]">
                <input type="radio" name="gender" id="genderFemale" value="[female]">
                <input type="radio" name="gender" id="genderBoth" value="[male,female]">
              </div>
            </div>
          

            <div class="form-group">
              <label class="col-xs-3 control-label">Age (min)</label>
              <div class="col-xs-5">
                <select class="form-control" name="ageMin">
                  <option value="18">18</option>
                  <option value="20">20</option>
                  <option value="25">25</option>
                  <option value="30">30</option>
                  <option value="35">35</option>
                  <option value="40">40</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-xs-3 control-label">Age (max)</label>
              <div class="col-xs-5">
                <select class="form-control" name="ageMax">
                  <option value="18">18</option>
                  <option value="20">20</option>
                  <option value="25">25</option>
                  <option value="30">30</option>
                  <option value="35">35</option>
                  <option value="40">40</option>
                  <option value="50">50</option>
                </select>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-xs-3 control-label">Height (min)</label>
              <div class="col-xs-5">
                <select class="form-control" name="height-min">
                  <option value="70">70</option>
                  <option value="80">80</option>
                  <option value="90">90</option>
                  <option value="100">100</option>
                  <option value="110">110/option>
                  <option value="120">120</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-xs-3 control-label">Height (max)</label>
              <div class="col-xs-5">
                <select class="form-control" name="height-max">
                  <option value="70">70</option>
                  <option value="80">80</option>
                  <option value="90">90</option>
                  <option value="100">100</option>
                  <option value="110">110/option>
                  <option value="120">120</option>
                  <option value="130">130</option>
                </select>
              </div>
            </div>
          </div>
        </div>
    
        <div class="form-group" style="margin-top: 15px;">
            <div class="col-xs-5 col-xs-offset-3">
                <button type="submit" class="btn btn-default">Search For Matches</button>
            </div>
        </div>
    </form>
  </div>
</div>